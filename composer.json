{
  "name": "mitwork/kalkan",
  "description": "Signing, validations digital signature with kalkan (NCALayer, NCANode)",
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "Eugene Kozlov",
      "email": "eudjin@gmail.com"
    }
  ],
  "require": {
    "php": "^8.1|^8.2|^8.3",
    "ext-gd": "*",
    "ext-json": "*",
    "ext-xml": "*",
    "illuminate/support": "^10.28",
    "guzzlehttp/guzzle": "^7.8",
    "endroid/qr-code": "^5.0"
  },
  "require-dev": {
    "khanamiryan/qrcode-detector-decoder": "^2.0",
    "laravel/pint": "^1.13",
    "phpunit/phpunit": "^10.4"
  },
  "autoload": {
    "psr-4": {
      "Mitwork\\Kalkan\\": "src/"
    }
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "config": {
    "sort-packages": true,
    "preferred-install": "dist",
    "optimize-autoloader": true
  }
}
